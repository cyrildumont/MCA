<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>distrib-assembly</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<!--<dependencySet>
			<outputDirectory>/codebase</outputDirectory>
			<includes>
				<include>org.apache.river:*-dl</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		-->
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<excludes>
				<exclude>org.apache.river:*-dl</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>commons-daemon:commons-daemon</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
	
	<files>
		<file>
			<source>src/ignore.me</source>
			<outputDirectory>/logs</outputDirectory>
		</file>
		<file>
			<source>src/ignore.me</source>
			<outputDirectory>/data</outputDirectory>
		</file>
	
	</files>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>org.mca:mca-bootstrap</exclude>
			</excludes>
			<binaries>
				<outputDirectory>/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.mca:mca-bootstrap</include>
			</includes>
			<binaries>
				<outputDirectory>/bin</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping>bootstrap.jar</outputFileNameMapping>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.mca:mca-*</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<directory>src/main/config</directory>
						<outputDirectory>../conf</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<sources>
				<fileSets>
					<fileSet>
						<excludes><exclude>jsvc</exclude></excludes>
						<fileMode>755</fileMode>
						<directory>src/main/bin</directory>
						<outputDirectory>../bin</outputDirectory>
						<filtered>true</filtered>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<sources>
				<fileSets>
					<fileSet>
						<includes><include>jsvc</include></includes>
						<fileMode>755</fileMode>
						<directory>src/main/bin</directory>
						<outputDirectory>../bin</outputDirectory>
						<filtered>false</filtered>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>