<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:property-placeholder location="file:${mca.home}/conf/mca.properties" />

	<bean id="reggie" class="org.mca.service.ServiceConfigurator">
		<property name="codebase">
			<list>
				<value>http://${mca.codebase.host}:${mca.codebase.port}/reggie-dl.jar
				</value>
				<value>http://${mca.codebase.host}:${mca.codebase.port}/jsk-dl.jar
				</value>
			</list>
		</property>
		<property name="implClass" value="com.sun.jini.reggie.TransientRegistrarImpl" />
		<property name="policy" value="${mca.home}/conf/policy" />
		<property name="serverConfigArgs" value="${mca.home}/conf/transient-reggie.config" />
		<property name="classpath">
			<list>
				<value>${mca.home}/lib/reggie.jar</value>
			</list>
		</property>
	</bean>

	<bean id="codebase" class="org.mca.server.CodebaseServer">
		<property name="port" value="${mca.codebase.port}" />
		<property name="stoppable" value="true" />
		<property name="verbose" value="false" />
		<property name="trees" value="true" />
		<property name="dirs">
			<list>
				<value>${mca.home}/codebase</value>
			</list>
		</property>
	</bean>

	<bean id="javaspace" class="org.mca.service.ServiceConfigurator">
		<property name="codebase">
			<list>
				<value>http://${mca.codebase.host}:${mca.codebase.port}/outrigger-dl.jar
				</value>
			</list>
		</property>
		<property name="implClass"
			value="com.sun.jini.outrigger.MCAPersistentOutriggerImpl" />
		<property name="policy" value="${mca.home}/conf/policy" />
		<property name="serverConfigArgs" value="${mca.home}/conf/persistent_outrigger.config" />
		<property name="classpath">
			<list>
				<value>${mca.home}/lib/outrigger.jar</value>
				<value>${mca.home}/lib/sun-util.jar</value>
				<value>${mca.home}/lib/mca-core.jar</value>
			</list>
		</property>
		<property name="locators">
			<list>
				<value>localhost</value>
			</list>
		</property>
	</bean>

	<bean id="transaction" class="org.mca.service.ServiceConfigurator" >
		<property name="codebase">
			<list>
				<value>http://${mca.codebase.host}:${mca.codebase.port}/mahalo-dl.jar
				</value>
			</list>
		</property>
		<property name="implClass"
			value="com.sun.jini.mahalo.TransientMahaloImpl" />
		<property name="policy" value="${mca.home}/conf/policy" />
		<property name="serverConfigArgs" value="${mca.home}/conf/persistent_mahalo.config" />
		<property name="classpath">
			<list>
				<value>${mca.home}/lib/mahalo.jar</value>
			</list>
		</property>
		<property name="locators">
			<list>
				<value>localhost</value>
			</list>
		</property>
	</bean>

</beans>
